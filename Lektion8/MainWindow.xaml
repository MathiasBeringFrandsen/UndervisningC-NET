<Window x:Class="Lektion8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="showPerformersButton" Content="Show" HorizontalAlignment="Left" Margin="61,158,0,0" VerticalAlignment="Top" Click="showPerformers"/>
        <ListBox x:Name="performerList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="61,27,73,296"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="116,158,0,0" VerticalAlignment="Top" Click="add"/>

    </Grid>
</Window>
