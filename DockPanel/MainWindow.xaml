<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Button x:Name="eastButton" Content="East" Width="NaN" Click="addName"/>
        <Button x:Name="westButton" Content="West" Width="40" DockPanel.Dock="Right" Click="addName"/>
        <Button x:Name="southButton" Content="South" Width="NaN" DockPanel.Dock="Bottom" Click="addName"/>
        <Button x:Name="NorthButton" Content="North" Width="NaN" DockPanel.Dock="Top" Click="addName"/>
        <TextBox x:Name="directionBox" TextWrapping="Wrap" Text="" Width="100"/>
    </DockPanel>
</Window>
